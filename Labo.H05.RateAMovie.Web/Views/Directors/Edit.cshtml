@model DirectorsDetailViewModel

<h2>@ViewBag.Action Director</h2>

<form asp-controller="Directors" asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input class="form-control" asp-for="FirstName" value="@Model.FirstName" />
        <span class="text-danger" asp-validation-for="FirstName"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName"></label>
        <input class="form-control" asp-for="LastName" value="@Model.LastName" />
        <span class="text-danger" asp-validation-for="LastName"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-warning">Cancel</a>
</form>
